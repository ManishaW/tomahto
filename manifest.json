{
  "manifest_version": 2,

  "name": "Tomahto",
  "description": "This extension closes random tabs",
  "icons": {
      "128": "icons/icon128.png",
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
   },
  "version": "1.0",
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html"
}